<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="red"
        android:background="#FF0000"
        android:padding="20dp"
        android:id="@+id/red"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="orange"
        android:id="@+id/orange"
        android:background="#FFA500"
        android:padding="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yellow"
        android:background="#FFFF00"
        android:padding="20dp"
        android:id="@+id/yellow"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="green"
        android:background="#00FF00"
        android:padding="20dp"
        android:id="@+id/green"
        android:layout_below="@+id/orange"
        android:layout_toLeftOf="@+id/orange"
        android:layout_toStartOf="@+id/orange"
        android:layout_marginTop="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blue"
        android:background="#0000FF"
        android:padding="20dp"
        android:id="@+id/blue"

        android:layout_alignBottom="@+id/green"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="indigo"
        android:background="#A020F0"
        android:padding="20dp"
        android:id="@+id/indigo"

        android:layout_alignBottom="@+id/blue"
        android:layout_toRightOf="@+id/orange"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/green"
        android:background="#EE82EE"
        android:id="@+id/violet"
        android:text="violet"
        android:layout_marginTop="28dp"
        android:padding="20dp"
        android:gravity="center"

        />

</RelativeLayout>